// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String @id @default(uuid())
  name          String @unique
  email         String @unique
  password_hash String
  phone         String @unique
  zip_code      String
  city          String
  
  pets          Pet[]

  @@map("organizations")
}

model Pet {
  id                 String       @id @default(uuid())
  name               String
  about              String
  animal             Animal
  gender             Gender
  breed              String?
  age                String
  size               Size
  energy_level       Level
  independency_level Level
  photo              String?
  city               String

  organization       Organization @relation(fields: [organization_id], references: [id])
  organization_id    String

  @@map("pets")
}

enum Animal {
  DOG
  CAT
}

enum Gender {
  MALE
  FEMALE
}

enum Size {
  MINI
  P
  M
  G
  XG
}

enum Level {
  LOW
  MEDIUM
  HIGH
}
