// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String @id @default(uuid())
  name          String @unique
  email         String @unique
  password_hash String
  phone         String @unique
  address       Adress @relation(fields: [address_id], references: [id])
  address_id    String
  pets          Pet[]

  @@map("organizations")
}

model Adress {
  id            String         @id @default(uuid())
  street        String
  zip_code      String
  city          String
  organizations Organization[]

  @@map("addresses")
}

model Pet {
  id                 String       @id @default(uuid())
  name               String
  about              String
  age                Int
  size               Size
  energy_level       Level
  independency_level Level
  photos             Bytes?
  organization       Organization @relation(fields: [organization_id], references: [id])
  organization_id    String

  @@map("pets")
}

enum Size {
  MINI
  P
  M
  G
  XG
}

enum Level {
  LOW
  MEDIUM
  HIGH
}
